<div id="show" class="show section">
	<div class="lead">
		<h2 class="lead-title">Show me the output.</h2>
	</div>
	<div class="grid grid-container">
		{% for item in show_section.content %}
			<div class="item -show -twelve">
				<h4 class="heading">{{ item.title }}</h4>
				{% if item.site != '#' %}
					<a class="subheading" target="_blank" href="{{ item.site }}" class="heading">{{ item.site }}</a>
				{% endif %}
				<p class="copy">{{ item.copy }}</p>
				<p class="keywords">{{ item.keywords }}</p>
				{% if item.site != '#' %}
					<a class="link" target="_blank" href="{{ item.site }}" class="heading">Visit the party</a>
				{% endif %}
			</div>
		{% endfor %}
	</div>
</div>
